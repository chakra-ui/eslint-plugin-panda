{
  "name": "eslint-plugin-panda",
  "version": "0.0.1",
  "description": "Eslint plugin for Panda CSS",
  "author": "Abraham Aremu <anubra266@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r --parallel build",
    "test": "vitest run",
    "readme": "node tools/build-readme.js && pnpm prettier-fix",
    "deps": "pnpm -r --parallel deps",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "release": "changeset publish",
    "release-dev": "changeset version --snapshot dev && changeset publish --tag dev",
    "typecheck": "pnpm -r --parallel typecheck"
  },
  "main": "plugin/dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/micromatch": "^4.0.10",
    "@typescript-eslint/utils": "^8.21.0",
    "esbuild": "^0.27.0",
    "micromatch": "^4.0.8",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@pandacss/dev": "^1.0.0",
    "@types/eslint": "^9.6.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.0.0",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "globals": "^17.0.0",
    "husky": "^9.0.6",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.4",
    "typescript-eslint": "^8.21.0",
    "vitest": "^4.0.0"
  },
  "lint-staged": {
    "*": [
      "pnpm prettier-fix"
    ]
  },
  "packageManager": "pnpm@10.28.2"
}
